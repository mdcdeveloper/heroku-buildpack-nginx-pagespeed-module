#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e

# config
NGINX_VERSION='1.7.0'
# NGINX_PACKAGE='https://www.dropbox.com/s/8ev4wkzw7b6ex5z/nginx_ps_1.7.0.tgz?dl=1'
NGINX_PACKAGE='https://raw.githubusercontent.com/scottmotte/srvdir-binary/master/srvdir.tar.gz'

# parse and derive params
BUILD_DIR=$1
CACHE_DIR=$2

# vendor directories
VENDORED_NGINX=$(mktemp -d -t nginx.XXXXXX)

# download and upack packages
echo "-----> Fetching nginx binaries"
curl $NGINX_PACKAGE -L -s -o - | tar xzf - -C $VENDORED_NGINX

# vendor nginx into the slug
echo "-----> Vendoring nginx $NGINX_VERSION"
mkdir -p "$BUILD_DIR/bin"
cp "$VENDORED_NGINX/srvdir" "$BUILD_DIR/bin/nginx"

# build a startup script
cat <<EOF >"$BUILD_DIR/bin/start_nginx"
#!/usr/bin/env bash
erb conf/nginx.conf.erb > conf/nginx.conf
mkdir -p logs
touch logs/access.log logs/error.log
(tail -qF -n 0 --pid=\$\$ logs/*.log &)
(vendor/node/bin/node app &)
exec bin/nginx -p .
EOF
chmod +x "$BUILD_DIR/bin/start_nginx"
